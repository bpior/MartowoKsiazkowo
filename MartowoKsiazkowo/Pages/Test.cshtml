@page
@model Test
@{
    ViewData["Title"] = "Add Book";
}

<h1>Add Book</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Title">Title:</label>
        <input asp-for="Book.Tytul" class="form-control" />
        <span asp-validation-for="Book.Tytul" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Author">Author:</label>
        <input asp-for="Book.Author" class="form-control"/>
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.BookInfoId" class="control-label"></label>
        <select asp-for="Book.BookInfoId" class="form-control" asp-items="ViewBag.BookInfoId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Book.AuthorId" class="control-label"></label>
        <select asp-for="Book.AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
    </div>
    <div class="form-group">
        <label for="Image">Image:</label>
        <input asp-for="ImageFile" type="file" class="form-control"/>
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>



